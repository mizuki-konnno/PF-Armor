  <% if corde.favorited_by?(current_user) %>
    <p>
      <%= link_to corde_favorites_path(corde), method: :delete, remote: true do %>
        ♥<%= corde.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to corde_favorites_path(corde), method: :post, remote: true do %>
        ♡<%= corde.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>