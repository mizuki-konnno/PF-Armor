<div class = "container fade-in-bottom">
  <div class = "row">
    <div class = "col text-center my-5">
      <h1>ジャンル一覧・追加</h1>
    </div>
  </div>
  <div class = "row">
    <div class = "col-4 mx-auto">
      <%= form_with model: @genre, local:true do |f| %>
      <table class = "table">
        <tr>
          <td><%= f.label :name, "ジャンル名" %></td>
        </tr>
        <tr>
          <td><%= f.text_field :name,  class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.submit "新規登録", class: "btn btn-outline-secondary"%></td>
        </tr>
      </table>
      <% end %>
    </div>


    <div class = "col-6 text-center mx-auto">
      <table class = "table">
        <tr>
          <th>ジャンル</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class = "row">
    <div class = "col text-center">
      <%= link_to "戻る", :back, class: "btn btn-outline-secondary mt-5" %>
    </div>
  </div>
</div>