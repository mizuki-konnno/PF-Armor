<div class = "image1">
  <div class = "col-12 bg-transparent py-5"> </div>
  <div class="col-4 pt-5 mx-auto">
    <div class="display-1 text-center text-black-50 border border-dark">Armor</div>
  </div>
</div>
<div class = "container" >
  <div class = "row">
    <div class = "col text-center my-5">
      <% if user_signed_in? %>
      <%= link_to "コーデ新規投稿", new_corde_path, class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
  <div class = "row">
    <% @cordes.each do |corde| %>
    <div class = "col-2 mt-3">
      <%= link_to corde_path(corde.id) do %>
      <%= attachment_image_tag(corde, :corde_image, size: "150x180", fallback: "no_image.jpg") %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>