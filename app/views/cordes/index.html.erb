<div class = "container" >
  <div class = "row" >
    <div class = "col text-center my-5">
      <h1>コーデ一覧</h1>
    </div>
  </div>
  <div class = "row">
    <div class = "col text-center my-3">
      <%= link_to "コーデ新規投稿", new_corde_path, class: "btn btn-link" %>
    </div>
  </div>
  <div class = "row">
    <% @cordes.each do |corde| %>
    <div class = "col">
      <%= link_to corde_path(corde.id) do %>
      <%= attachment_image_tag(corde, :corde_image, size: "150x100", fallback: "no_image.jpg") %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>