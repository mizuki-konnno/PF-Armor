<div class = "container">
  <div class = "row">
    <div class = "col text-center my-3">
      　<h1>所持一覧</h1>
    </div>
  </div>
  <div class = "row">
    <div class = "col text-center my-3">
      <%= link_to "所持品登録", new_clothe_path, class: "btn btn-link" %>
    </div>
  </div>
  <div class = "row">
    <% @clothes.each do |clothe| %>
    <div class = "col-2">
      <%= link_to clothe_path(clothe.id) do %>
      <%= attachment_image_tag(clothe, :clothes_image, size: "120x150", fallback: "no_image.jpg") %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
</div>