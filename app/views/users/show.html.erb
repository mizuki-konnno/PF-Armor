<div class = "container fade-in-bottom">
  <div class = "row">
    <div class = "col text-center my-3">
      　<h1><%= @user.name %>is MyPage</h1>
    </div>
  </div>
  <div class = "row" >
    <% if @user == current_user %>
      <div class = "col text-center my-3" >
        <%= link_to "MyPage編集", edit_user_path(@user), class:"btn btn-outline-secondary" %>
      </div>
    <% else %>
      <div class = "col text-center my-3" >
        <%= link_to "Other Users", users_path, class:"btn btn-outline-secondary" %>
      </div>
    <% end %>
    <div class="col-md-12 my-3 text-center">
      <% unless current_user == @user %>
      <p  id="follow_button_<%= @user.id %>"><%= render 'relationships/follow_button',user: @user %></p>
      <% end %>
      <span id="followings_count_<%= @user.id %>">
        フォロー数 <%= link_to @user.followings.count,user_followings_path(@user) %>
      </span> |
      <span id="followers_count_<%= @user.id %>">
        フォロワー数 <%= link_to @user.followers.count,user_followers_path(@user) %>
      </span>
    </div>
  </div>
  <div class = "row">
    <div class = "col-8 mx-auto">
       <table class="table my-3 text-center">
        <tr>
          <td colspan="2"><%= attachment_image_tag(@user, :profile_image, :size =>'250x300', fallback: "no_image.jpg") %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <td>性別</td>
          <td><%= @user.gender %></td>
        </tr>

        <tr>
          <td>身長</td>
          <td><%= @user.height %>cm</td>
        </tr>
        <tr>
          <td colspan="2">マイプロフィール</td>
        </tr>
        <tr>
          <td colspan="2"><%= @user.introduction %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class = "row my-5" >
    <div class = "col-3 text-center mx-auto" >
      <% if @user == current_user %>
        <%= link_to "Other Users", users_path, class:"btn btn-outline-secondary" %>
      <% end %>
    </div>
    <div class = "col-3 text-center mx-auto" >
      <% if @user == current_user %>
        <%= link_to "クローゼット一覧", clothes_path, class:"btn btn-outline-secondary" %>
      <% end %>
    </div>
    <div class = "col-3 text-center mx-auto" >
      <% if @user == current_user %>
        <%= link_to "欲しいものリスト", wish_lists_path, class:"btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
  <div class = "row">
    <div class = "col text-center">
      <%= link_to "投稿コーデ一覧", cordes_user_cordes_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>