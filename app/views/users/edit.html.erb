<div class = "container fade-in-bottom">
  <div class = "row">
    <div class = "col text-center my-3">
      　<h1>User編集</h1>
    </div>
  </div>
  <div class = "row" >
    <div class = "col-8 text-center mx-auto" >
      <%= form_with model: @user, local:true do |f| %>
      <table class = "table my-5" >
        <tr>
          <td><%= f.label :profile_image, "画像" %></td>
          <td><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></td>
        </tr>
        <tr>
          <td><%= f.label :name, "名前" %></td>
          <td><%= f.text_field :name, class: 'form-control' %></td>
        </tr>
        <tr>
          <td colspan = "2">
            <%= f.radio_button :gender, :男性 %>
            <%= f.label :男性, class: "gender_lavel" %>
            <%= f.radio_button :gender, :女性 %>
            <%= f.label :女性, class: "gender_lavel" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :height, "身長" %></td>
          <td><%= f.text_field :height, class: 'form-control' %>cm</td>
        </tr>
        <tr>
          <td><%= f.label :introduction, "自己紹介" %></td>
          <td><%= f.text_area :introduction, rows: 3, class: 'form-control' %></td>
        </tr>
        <tr>
          <td colspan = "2"><%= f.submit "変更を保存", class: 'btn btn-outline-secondary mt-5' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>